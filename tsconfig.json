{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react",
    "jsxFactory": "h",
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib"
  },
  "exclude": ["lib", "node_modules", "**/*.test.*"]
}
